<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
       <div class="d-flex justify-content-center">
         <h2>Log in</h2>
       </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: "Correo Electronico",
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      label: "Contrasena",
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Entrar", class: "btn btn-dark", style: "color:white;" %>
        </div>
      <% end %>    
    </div>
  </div>
</div>

<br><br>
<div class="container">
  <div class="row">
    <div class="col-7">
      <div class="d-flex justify-content-end">
        <p><%= link_to "Olvidaste tu contrasena?", new_password_path(resource_name) %></p>
      </div>
      <div class="d-flex justify-content-end">
        <p><%= link_to "Crear cuenta", new_registration_path(resource_name) %></p>
      </div>
    </div>
  </div>
</div>
