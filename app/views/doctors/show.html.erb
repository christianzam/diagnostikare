<p id="notice"><%= notice %></p>
<div class="container">
  <div class="main-body">
    <h1>Dr.<%= @doctor.name %></h1>
        <div class="row gutters-sm">
          <div class="col-md-4 mb-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                  <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                  <div class="mt-3">
                    <p class="text-dark"><%= (@doctor.specialty).capitalize %></p>
                  </div>
                </div>
              </div>
            </div>              
          </div>
          <div class="col-md-8">
            <div class="card mb-3">
              <div class="card-body">
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="text-white bg-dark mb-0">Nombre</h6>
                  </div>
                  <div class="col-sm-9 text-dark">
                    <%= @doctor.name %>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="text-white bg-dark mb-0">Direccion</h6>
                  </div>
                  <div class="col-sm-9 text-dark">
                    <%= @doctor.address %>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="text-white bg-dark mb-0">Rating</h6>
                  </div>
                  <div class="col-sm-9 text-dark">
                    <%= @doctor.rating %> <i class="fas fa-star mr-2"></i>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <h6 class="text-white bg-dark mb-0">Specialidad</h6>
                  </div>
                  <div class="col-sm-9 text-dark">
                    <%= (@doctor.specialty).capitalize %>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-12">
                    <button class="btn btn-dark"><i class="fas fa-edit mr-2"><%= link_to ' Hacer Cita', new_appointment_path, style:"color:white;" %></i></button>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-9">
      <div class="d-flex justify-content-end">
        <p><%= link_to '< Ir atras', doctors_path, style:"color:black;" %></p>
      </div>
    </div>
  </div>
</div>

