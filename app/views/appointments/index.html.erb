<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Symptoms</th>
      <th>User</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.symptoms %></td>
        <td><%= appointment.user_id %></td>
        <td><%= appointment.doctor_id %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>


<div class="container mt-3">
  <div class="row">
    <% @doctors.each do |doctor| %>
      <div class="col-4">
        <div class="doc-card">
         <div class="doc-card-image" style="background-image: url('https://bootdey.com/img/Content/avatar/avatar7.png')"></div>
          <div class="doc-card-content">
            <div class="doc-card-title">
              <h4><%= doctor.name %></h4>
            </div>
            <p><%= doctor.address %></p>
            <div class="flex">
              <div class="flex">
                <i class="fas fa-stethoscope"></i><span>&nbsp;<%= doctor.specialty %></span>
              </div>
              <div class="flex ml-3">
                <i class="fas fa-star mr-2"></i><%= doctor.rating %></li>
              </div>
            </div>
          </div>
          <div class="doc-card-actions">
            <%= link_to 'More info', doctor %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
